generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model backlog_games {
  id        String        @id @default(cuid())
  userId    String
  gameId    Int
  gameSlug  String
  gameName  String
  gameImage String?
  status    BacklogStatus @default(WANT_TO_PLAY)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  users     users         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
}

model favorite_games {
  id        String   @id @default(cuid())
  userId    String
  gameId    Int
  gameSlug  String
  gameName  String
  gameImage String?
  rank      Int
  createdAt DateTime @default(now())
  users     users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@unique([userId, rank])
}

model users {
  id             String           @id @default(cuid())
  email          String           @unique
  username       String           @unique
  passwordHash   String
  avatarUrl      String?
  bio            String?
  createdAt      DateTime         @default(now())
  backlog_games  backlog_games[]
  favorite_games favorite_games[]
}

enum BacklogStatus {
  WANT_TO_PLAY
  PLAYING
  COMPLETED
  DROPPED
  ON_HOLD
}
